<resources>

    <!-- Base application theme. -->


    <!--Toolbar styles-->
    <style name="ToolBar">
        <item name="android:background">#262626</item>
    </style>

    <!--Style for the background of the different views-->
    <style name="ViewBackground">
        <item name="android:background">#262626</item>
    </style>

    <!--Style for the buttons ALBUMS, SONGS, ARTISTS, etc-->
    <style name="ToolBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#262626</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">7pt</item>

        <!--make the buttons take all available space-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Style for most text-->
    <style name="InfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#262626</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>

